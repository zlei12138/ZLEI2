<?xml version="1.0" encoding="utf-8"?>



<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="12dp"
    app:cardElevation="10dp">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:padding="10dp"
                android:textSize="18sp"
                android:text="平壤札记｜超近距离看金正恩剪彩，现场掌声雷动！"
                android:id="@+id/collect_nopic_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="来源："
                android:id="@+id/textView3"
                android:layout_marginStart="19dp"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/collect_nopic_src"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="环球网"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/textView3" />

            <TextView
                android:id="@+id/fl"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分类："
                android:layout_toEndOf="@+id/collect_nopic_src"
                android:layout_marginStart="30dp" />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/collect_nopic_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="category"
                android:layout_toEndOf="@+id/fl"
                android:layout_marginStart="5dp"
                />

        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>

